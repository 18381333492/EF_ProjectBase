
@{
    ViewBag.Title = "菜单按钮";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div style="margin:10px;">
     <ul id="Button" oncontextmenu="return false"></ul>  
  </div>
   <!--右键菜单-->
  <div id="mm" class="easyui-menu" style="width:120px;">
        <div class="add" data-options="iconCls:'icon-add'">新增按钮</div>
        <div class="edit" data-options="iconCls:'icon-edit'">编辑按钮</div>
        <div class="cancel" data-options="iconCls:'icon-remove'">删除按钮</div>
        <div class="menu-sep"></div>
        <div>Exit</div>
  </div>
<script type="text/javascript">
    $(function () {
        var f = new eui();
        var tree = $('#Button'); 
        var menuId;
        var buttonId;

       
        /*
        *树形菜单按钮数据绑定
        */
        tree.tree({
            url:'/Admin/Button/List',
            animate: true,
            onContextMenu: function (e, row) {
                if (row.iconCls == "") {
                    menuId = row.id;
                    //二级菜单
                    $('#mm .add').show();
                    $('#mm .edit').hide();
                    $('#mm .cancel').hide();
                    $('#mm').menu('show', {
                        left: e.clientX,
                        top: e.clientY
                    });
                    return;
                }
                if (row.iconCls != undefined && row.iconCls.length > 0) {
                    buttonId = row.id;
                    $('#mm .add').hide();
                    $('#mm .edit').show();
                    $('#mm .cancel').show();
                    $('#mm').menu('show', {
                        left: e.clientX,
                        top: e.clientY
                    });
                }
            }
        });


        //菜单鼠标右键的单击菜单事件监听
        $('#mm').menu({
            onClick: function (item) {
                if (item.text == "新增按钮") {
                    var dialog = f.dialog('/Admin/Button/Add', '添加按钮', function () {
                        if ($('#add_form').form('validate'))
                        {
                            var data = $('#add_form').serialize() + '&sToMenuId=' + menuId;
                            f.post('/Admin/Button/Insert', data, function (res) {
                                dialog.dialog('close');
                                tree.tree('reload');
                            });
                        }
                    },400,300);
                    return;
                }
                if (item.text == "编辑按钮") {
                    var dialog = f.dialog('/Admin/Button/Edit?ID=' + buttonId, '编辑按钮', function () {
                        if ($('#edit_form').form('validate')) {
                            var data = $('#edit_form').serialize() + '&sToMenuId=' + menuId;
                            f.post('/Admin/Button/Update', data, function (res) {
                                dialog.dialog('close');
                                tree.tree('reload');
                            });
                        }
                    },400,300);
                   return;
                }
                if (item.text == "删除按钮") {
                    var dialog = f.dialog('/Admin/Button/Cancel', '删除按钮', function () {
                       
                    });
                   return;
                }
            }
        });
    })
</script>