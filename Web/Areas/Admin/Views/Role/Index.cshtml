@{
    ViewBag.Title = "角色管理";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<table id="Role"></table>
<div id="Role_toolbar" style="padding:5px"> 
    @Html.Partial("~/Areas/Admin/Views/Shared/_Button.cshtml")
</div>
<script type="text/javascript">
    $(function () {
        var f = new eui();
        var role = f.config("Admin", "Role");
   
        /*!
        * method:添加角色
        * author:[汤台]
        * version:[1.0.0]
        */
        role.Insert.handle = function () {
            var dialog = f.dialog(role.route("Insert"), '添加角色',
                function () {

            });
        }

        /*!
        * method:编辑角色
        * author:[汤台]
        * version:[1.0.0]
        */
        role.Insert.handle = function () {
            var select = role.grid.datagrid('getSelections');
            if (select.length == 1) {
                var dialog = f.dialog(role.route("Update"), '编辑角色',
                    function () {

                    });
            }
            else {
                f.alert("请选择一条数据进行操作!");
            }
        }

        /*!
        * method:分配权限
        * author:[汤台]
        * version:[1.0.0]
        */
        role.Power = function () {
            var select = role.grid.datagrid('getSelections');
            if (select.length==1) {
                var dialog = f.dialog(role.route("Power") + "?ID=" + select[0].ID, '分配权限',
                  function () {
                      var array = $('#power .menuId:checked');
                      var sPower = array.GetValue();
                      array = $('#power .buttonId:checked');
                      sPower = sPower + "|" + array.GetValue();
                      param = { sPower: sPower, ID: select[0].ID }
                      f.post(role.route("SetPower"), param,
                          function (res) {
                              f.alert('操作成功!');
                              dialog.dialog('close');
                          });
                  });
            }
            else {
                f.alert("请选择一条数据进行操作!");
            }
        }
      


        /*!
        * method:绑定角色按钮事件
        * author:[汤台]
        * version:[1.0.0]
        */
        $(role.toolbar)
                //.on('click', 'a[data-name=role_add]', menus.Insert.handle)
                //.on('click', 'a[data-name=role_edit]', menus.Update.handle)
                //.on('click', 'a[data-name=role_edit]', menus.Cancel.handle)
                .on('click', 'a[data-name=role_power]', role.Power)

        /*!
        * method:角色数据列表(datagrid)的绑定
        * author:[汤台]
        * version:[1.0.0]
        */
        role.grid.datagrid({
            fit:true,
            url: role.route('List'),
            toolbar: role.toolbar,
            striped: true,
            pagination: true,
            loadMsg: "正在加载...",
            columns: [[
                { field: '', checkbox: true, },
                { field: 'sRoleName', title: '角色名称', align: 'center', width: 150 },
                { field: 'sPower', title: '权限等级', align: 'center', width: 180 },
                { field: 'sInsertTime', title: '添加时间', align: 'center', width: 200}
            ]],
        });
    });
</script>